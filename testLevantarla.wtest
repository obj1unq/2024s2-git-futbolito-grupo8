import objetos.*

describe "Levantarla" {
    test "Levanta" {
        pelota.position(game.at(5,5))
        lionel.buscarla()
        lionel.levantarla()
        const posicionEsperada = game.at(5,6)
        assert.equals(posicionEsperada, pelota.position())
    }

    test "No puede levantar porque no tiene la pelota" {
        lionel.inicio()
        assert.throwsException({lionel.levantarla()})
    }
}